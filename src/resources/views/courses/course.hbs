<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <button type="button" class="btn btn-success">Thông tin khóa học</button>
        </div>
        <div class="col-sm-10"> 
            {{#with course}}
            <h1>{{this.name}}</h1>
            <iframe width="1000" height = "500"  src="https://www.youtube.com/embed/{{this.videoID}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <p>{{this.description}}</p>
            {{/with}}
        </div>
    </div>
</div>